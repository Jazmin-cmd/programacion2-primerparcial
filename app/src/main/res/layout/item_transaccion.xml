<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Este ImageView cambiará de icono dependiendo si es ingreso o egreso -->
        <ImageView
            android:id="@+id/imageview_transaccion_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            tools:src="@drawable/ic_add_24" /> <!-- Icono de ejemplo -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/textview_transaccion_monto"
            android:layout_toEndOf="@id/imageview_transaccion_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_transaccion_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Pago de nómina" />

            <TextView
                android:id="@+id/textview_transaccion_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="15 de Mayo, 2024" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_transaccion_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="$1,500.00" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
